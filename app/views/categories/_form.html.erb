<%= nested_form_for @category, :html=>{:multipart => true } do |f| %>
  <fieldset>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :images %>
      <%= f.fields_for :images do |fi| %>
        <% if fi.object.new_record? %>
            <%= fi.file_field :image %>
        <% else %>
            <%= image_tag fi.object.image.url %>
            <%= fi.link_to_remove "Remove" %>
        <% end %>
      <% end %>
      <%= f.link_to_add "Add", :images %>
    </div>

    <%= f.submit %>
  </fieldset>
<% end %>

